    .jumbotron p {
        text-indent: 30px;
    }

    .jumbotron h5 {
        text-align: center;
    }
    @@media screen and (max-width: 768px) {
        h1.title {
            font-size: 32px;
        }
    }
    
</style>
<div class="jumbotron pt-4 pb-4">
    <h1 class="display-4 text-center mb-4 title">Працевлаштування</h1>
